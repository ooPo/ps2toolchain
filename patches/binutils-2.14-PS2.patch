+     DVP_INSN *insn;
+     int *pinvalid;
+{
+  long value;
+  int word = operand->shift / 32;
+  value = (insn[word] >> operand->shift % 32) & ((1 << operand->bits) - 1);
+  /* Tuck the value away for later use.  */
+  state_gif_nloop = value;
