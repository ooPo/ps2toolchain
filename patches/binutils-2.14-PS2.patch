+  if (((insn[0] >> 26) & 3) == 2)
+     value |= DMA_FLAG_PCE0;
+  if (((insn[0] >> 26) & 3) == 3)
+     value |= DMA_FLAG_PCE0;
+  if (((insn[0] >> 31) & 1) == 1)
+     value |= DMA_FLAG_INT;
+  if (((insn[1] >> 31) & 1) == 1)
