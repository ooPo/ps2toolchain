+static long
+extract_gif_regs (opcode, operand, mods, insn, pinvalid)
+     const dvp_opcode *opcode;
+     const dvp_operand *operand;
+     int mods;
+     DVP_INSN *insn;
+     int *pinvalid;
+{
+  state_gif_nregs = (insn[1] & MGIFNREGS) >> 28;
+  return state_gif_nregs;
+}
