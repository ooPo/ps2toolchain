+static void
+insert_ffstreg (opcode, operand, mods, insn, value, errmsg)
+     const dvp_opcode *opcode;
+     const dvp_operand *operand;
+     int mods;
+     DVP_INSN *insn;
+     long value;
+     const char **errmsg;
+{
+  if (operand->shift == VU_SHIFT_SREG)
+    *insn |= VLFSF (value >> 5) | VS (value);
+  else
+    *insn |= VLFTF (value >> 5) | VT (value);
