+     when written out.  */
+
+  p = insn + 2;
+  for (i = 0; i < state_gif_nregs; ++i)
+    {
+      /* Move to next word?  */
+      if (i == 8)
+	++p;
+
+      *p |= state_gif_regs[i] << (i * 4);
+    }
+
+  insn[1] |= VGIFNREGS (state_gif_nregs);
+}
