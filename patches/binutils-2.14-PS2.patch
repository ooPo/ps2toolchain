+static void
+insert_dma_flags (opcode, operand, mods, insn, value, errmsg)
+     const dvp_opcode *opcode;
+     const dvp_operand *operand;
+     int mods;
+     DVP_INSN *insn;
+     long value;
+     const char **errmsg;
+{
+  if (value & DMA_FLAG_PCE0)
+    insn[0] |= 2 << 26;
+  else if (value & DMA_FLAG_PCE0)
+    insn[0] |= 3 << 26;
+  if (value & DMA_FLAG_INT)
+    insn[0] |= (1 << 31);
+  if (value & DMA_FLAG_SPR)
+    insn[1] |= (1 << 31);
+}
